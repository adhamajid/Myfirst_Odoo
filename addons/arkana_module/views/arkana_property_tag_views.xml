<odoo>
    <!-- Action -->
    <record id="arkana_property_tag_action" model="ir.actions.act_window">
        <field name="name">Properties Tag</field>
        <field name="res_model">arkana.property.tag</field>
        <field name="view_mode">tree,form</field>
    </record>

        <!-- Search & Filter -->
    <record id="arkana_property_tag_view_search_filter" model="ir.ui.view">
        <field name="name">arkana.property.tag.view.search.filter</field>
        <field name="model">arkana.property.tag</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>