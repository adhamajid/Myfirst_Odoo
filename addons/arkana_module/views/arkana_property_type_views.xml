<odoo>
    <!-- Action -->
    <record id="arkana_property_type_action" model="ir.actions.act_window">
        <field name="name">Properties Types</field>
        <field name="res_model">arkana.property.type</field>
        <field name="view_mode">tree,form</field>
    </record>

        <!-- Search & Filter -->
    <record id="arkana_property_type_view_search_filter" model="ir.ui.view">
        <field name="name">arkana.property.type.view.search.filter</field>
        <field name="model">arkana.property.type</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
            </search>
        </field>
    </record>

</odoo>