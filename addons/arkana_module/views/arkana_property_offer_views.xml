<odoo>
    <!-- Action -->
    <record id="arkana_property_offer_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">arkana.property.offer</field>
        <field name="view_mode">tree,form</field>
		<field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

    <!-- Tree  -->
     <record id="arkana_property_offer_view_tree" model="ir.ui.view">
        <field name="name">arkana.property.offer.view.tree</field>
        <field name="model">arkana.property.offer</field>
        <field name="arch" type="xml">
            <tree>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
                <button name="action_accept" type="object" string="Accept" icon="fa-check"/>
                <button name="action_refuse" type="object" string="Refuse" icon="fa-times"/>
                <field name="state"/>  
            </tree>
        </field>
    </record>

    <!-- Form -->
    <record id="arkana_property_offer_view_form" model="ir.ui.view">
        <field name="name">arkana.property.offer.view.form</field>
        <field name="model">arkana.property.offer</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="price"/>
                        <field name="partner_id"/>
                        <field name="validity"/>
                        <field name="date_deadline"/>
                        <field name="state"/>                        
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>